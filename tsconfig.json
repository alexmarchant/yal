{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2018",
    "module": "CommonJS",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
  },
  "exclude": [
    "node_modules"
  ]
}
